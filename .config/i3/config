for_window [class="livecaptions"] floating enable
bindsym $mod+Ctrl+l exec flatpak run net.sapples.LiveCaptions

bindsym $mod+Shift+S exec flameshot gui

bindsym Ctrl+Shift+Escape exec missioncenter

for_window [title="MetaElite"] floating disable

for_window [class="livecaptions"] border none
